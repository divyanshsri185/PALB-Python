def searchInsert(nums, target):
    low, high = 0, len(nums) - 1

    while low <= high:
        mid = (low + high) // 2

        if nums[mid] == target:
            return mid
        elif nums[mid] < target:
            low = mid + 1
        else:
            high = mid - 1

    # insertion position
    return low



print(searchInsert([1,3,5,6], 5))  # 2
print(searchInsert([1,3,5,6], 2))  # 1
print(searchInsert([1,3,5,6], 7))  # 4
