def searchMatrix(matrix, target):
    if not matrix or not matrix[0]:
        return False

    m = len(matrix)
    n = len(matrix[0])

    low, high = 0, m * n - 1

    while low <= high:
        mid = (low + high) // 2

        # convert 1D index to 2D
        row = mid // n
        col = mid % n

        value = matrix[row][col]

        if value == target:
            return True
        elif value < target:
            low = mid + 1
        else:
            high = mid - 1

    return False


# Example
matrix = [
    [1,3,5,7],
    [10,11,16,20],
    [23,30,34,60]
]

print(searchMatrix(matrix, 3))   # True
print(searchMatrix(matrix, 13))  # False
