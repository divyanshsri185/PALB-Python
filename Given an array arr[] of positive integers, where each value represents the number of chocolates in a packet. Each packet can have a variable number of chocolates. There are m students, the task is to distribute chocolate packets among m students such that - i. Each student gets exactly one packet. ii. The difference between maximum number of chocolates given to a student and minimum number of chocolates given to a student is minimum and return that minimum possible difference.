def chocolateDistribution(arr, m):
    n = len(arr)

    # Edge cases
    if m == 0 or n == 0:
        return 0
    if m > n:
        return -1

    # Step 1: Sort array
    arr.sort()

    # Step 2: Find minimum difference
    min_diff = float('inf')

    for i in range(n - m + 1):
        diff = arr[i + m - 1] - arr[i]
        min_diff = min(min_diff, diff)

    return min_diff


print(chocolateDistribution([3,4,1,9,56,7,9,12], 5))  # Output: 6
print(chocolateDistribution([7,3,2,4,9,12,56], 3))    # Output: 2
print(chocolateDistribution([3,4,1,9,56], 5))         # Output: 55
