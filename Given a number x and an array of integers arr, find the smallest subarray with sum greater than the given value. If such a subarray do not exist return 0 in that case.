def smallest_subarray(x, arr):
    n = len(arr)
    
    min_len = n + 1
    curr_sum = 0
    start = 0

    for end in range(n):
        # expand window
        curr_sum += arr[end]

        # shrink window while sum > x
        while curr_sum > x:
            min_len = min(min_len, end - start + 1)
            curr_sum -= arr[start]
            start += 1

    # if no subarray found
    if min_len == n + 1:
        return 0
    return min_len


